<body class="signin-body">
    <%if(error && error.length>0){%>
        <div class="alert alert-danger" id="danger-alert" style="text-align:center;">
            <%=error%>
        </div>
        <%}if(success && success.length>0){%>
            <div class="alert alert-success" id="success-alert" style="text-align:center;">
                <%=success%>
            </div>
            <%}%>

                <div class="container signin-container">
                    <div class="row">
                        <div class="col"></div>
                        <div class="col-8">
                            <div class="card signin-card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <a href="/"><img src="Logo1.png" alt="hotel image" class="img-fluid signin-img"></a>
                                        </div>
                                        <div class="col-sm-6">

                                        <div class = "container info">
                                            <%=room_info.category_data.name%> Room price : <span><%= room_info.category_data.price %></span><br>
                                            Room No. <span><%= room_info.desired_room.room_number %></span><br>
                                            Booking Starts from :  <span><%= room_info.start %></span><br>
                                            Booking Ends : <span><%= room_info.end %></span><br>
                                            Room will booked for <span><%= room_info.diffDays %></span> Day<%if(room_info.diffDays > 1){%>s<%}%>.<br> 
                                            Total Price : <span><%=( parseInt(room_info.category_data.price) * room_info.diffDays)%></span>
                                            <br><br>
                                            Are you sure ?
                                        </div>

                                                <form class="signin-form" action="/booked" method="post">
                                                    <!-- <div class="form-group">
                            <input type="email" class="form-control" id="emailInput" placeholder="Email" name="username" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="passwordInput" placeholder="Password" name="password" required>
                        </div> -->
                                                    <button type="submit" class="btn btn-primary signin-btn">Yes</button>
                                                    <a href='/' class="btn btn-secondary btn-block btn-lg signin-btn">Back to Home</a>
                                                    
                                                    <div class="col-sm-6">

                                                    </div>
